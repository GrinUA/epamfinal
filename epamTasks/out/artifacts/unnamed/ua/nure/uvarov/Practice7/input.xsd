<?xml version="1.0" encoding="UTF-8"?>
<!--  XML schema -->

<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema">

        <xsd:element name="Diamonds">
            <xsd:complexType mixed="true">
                <xsd:sequence >
                    <xsd:element name="Gem" type="Gem" maxOccurs="unbounded"/>
                </xsd:sequence>
            </xsd:complexType>
        </xsd:element>

    <xsd:complexType name="Gem" mixed="true">
        <xsd:sequence>
            <xsd:element name="Name" type="xsd:string"/>
            <xsd:element name="Preciousness" type="preciousness"/>
            <xsd:element name="Origin" type="xsd:string"/>
            <xsd:element name="Colour" type="xsd:string"/>
            <xsd:element name="Transparency" type="transparency"/>
            <xsd:element name="Edges" type="edges"/>
            <xsd:element name="Value" type="value"/>
        </xsd:sequence>
    </xsd:complexType>

    <xsd:simpleType name="preciousness">
        <xsd:restriction base="xsd:string">
            <xsd:enumeration value="Precious"/>
            <xsd:enumeration value="Semiprecious"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:simpleType name="transparency">
        <xsd:restriction base="xsd:integer">
            <xsd:minInclusive value="0"/>
            <xsd:maxInclusive value="100"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:simpleType name="edges">
        <xsd:restriction base="xsd:integer">
            <xsd:minInclusive value="4"/>
            <xsd:maxInclusive value="15"/>
        </xsd:restriction>
    </xsd:simpleType>

    <xsd:simpleType name="value">
        <xsd:restriction base="xsd:double">
            <xsd:minInclusive value="0.01"/>
        </xsd:restriction>
    </xsd:simpleType>
</xsd:schema>